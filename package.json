{
  "name": "cxip",
  "version": "1.0.0",
  "description": "CXIP Smart Contracts",
  "license": "UNLICENSED",
  "author": "vitto.io",
  "main": "index.js",
  "scripts": {
    "build": "node scripts/build.js",
    "cleanup": "rm mnemonic; rm priv_key; rm -fr contracts/*; rm -fr build; rm -fr data/*",
    "compile": "truffle compile --all",
    "ganache": "rm -fr ./db/*; ganache-cli --accounts=10 --defaultBalanceEther=100 --deterministic --mnemonic=\"$(cat ./mnemonic)\" --port=8545 --hostname=0.0.0.0 --gasPrice=0 --gasLimit=10000000 --networkId=5777 --db=./db --acctKeys=./keys.json",
    "pipeline": "npm run-script ganache & sh _pipeline.sh",
    "switch-cxip": "npm run-script cleanup; echo 'cxip' > network; cp cxip_mnemonic mnemonic; cp cxip_priv_key priv_key; npm run-script build",
    "switch-live": "npm run-script cleanup; echo 'live' > network; cp live_mnemonic mnemonic; cp live_priv_key priv_key; npm run-script build",
    "switch-local": "npm run-script cleanup; echo 'local' > network; cp local_mnemonic mnemonic; cp local_priv_key priv_key; npm run-script build",
    "build-compile": "rm -fr contracts/* ; rm -fr build/* ; npm run-script build ; npm run-script compile",
    "abi": "rm -fr abi/* ; node scripts/abi.js"
  },
  "dependencies": {
    "@0x/subproviders": "^2.1.4",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.1.0",
    "@openzeppelin/hardhat-upgrades": "^1.10.0",
    "@truffle/hdwallet-provider": "^1.3.0",
    "@types/chai": "^4.2.19",
    "@types/chai-as-promised": "^7.1.4",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.12.4",
    "bip39": "^2.6.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "eth-gas-reporter": "^0.2.17",
    "ethereum-cryptography": "^0.1.3",
    "ethereum-waffle": "^3.4.0",
    "ethereumjs-util": "^7.1.0",
    "ethereumjs-wallet": "^1.0.1",
    "ethers": "^5.4.1",
    "hardhat": "^2.4.1",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-typechain": "^0.3.5",
    "lint-staged": "^11.0.0",
    "multi-token-standard": "^0.8.13",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "rlp": "^2.2.6",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "truffle": "^5.3.4",
    "truffle-assertions": "^0.9.2",
    "truffle-flattener": "^1.4.2",
    "truffle-hdwallet-provider": "1.0.5",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.3.4",
    "web3": "^1.0.0-beta.34",
    "web3-eth-personal": "^1.3.6"
  },
  "devDependencies": {
    "dotenv": "^10.0.0"
  },
  "engines": {
    "node": "12.16.3",
    "yarn": "1.22.5"
  }
}
